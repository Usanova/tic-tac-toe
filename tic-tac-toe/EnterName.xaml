<Window x:Class="tic_tac_toe.EnterName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tic_tac_toe"
        mc:Ignorable="d"
        Name="MainWin" Title="EnterName" Height="180" Width="300" Background="#FF87B5E7" Closed="Window_Closed" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <TextBlock Name="tbMessage" Margin="15,15,0,15" FontSize="14" FontWeight="Bold">Введите имя</TextBlock>
        <Border Width="254" Height="34" Margin="15,0,0,0" Background="Black" HorizontalAlignment="Left" >
            <TextBox Name="tbName" Width="250" Height="30" Background="#FFF6F2F2" FontSize="14"></TextBox>
        </Border>
        <Button Name="btOK" Width="100" Height="30" Margin="5,10,23,5" HorizontalAlignment="Right" FontWeight="Bold" Background="#FF346EAE" Click="BtOK_Click">OK</Button>
    </StackPanel>
</Window>
